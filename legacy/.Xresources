! Xft font -----------------------------------------------------
Xft.dpi:        96
Xft.antialias:  true
Xft.hinting:    true
Xft.rgba:       rgb
Xft.hintstyle:  hintlight
Xft.lcdfilter:  lcddefault

! Rofi ---------------------------------------------------------
rofi.modi: run
rofi.font: Hack 15
rofi.width: 100
rofi.lines: 5
rofi.columns: 1
rofi.opacity: 85
!                    bg       fg      altbg    hlbg     hlfg
rofi.color-normal: #212121, #ffce3b, #212121, #ffce3b, #212121
rofi.color-urgent: #212121, #ffce3b, #212121, #ffce3b, #212121
rofi.color-active: #212121, #ffce3b, #212121, #ffce3b, #212121
rofi.color-window: #212121, #212121
rofi.bw: 0
rofi.location: 2
rofi.padding: 25
rofi.fuzzy: false

! Urxvt -------------------------------------------------------
URxvt*saveLines: 0
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.scrollBar_floating: false
urxvt*borderless:true
URxvt.depth: 32

URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1

URxvt*font: xft:Source Code Pro Medium:pixelsize=13:antialias=true:autohint=true

*background: #212121
*foreground: #839496

!black
*color0: #1c1c1c
*color8: #444444
!red
*color1: #8c5760
*color9: #ba394e
!greenu
